# importantStartButton = d0
validatorControl     = d1
furnaceControl       = d2
tTDisp               = d3
pTDisp               = d4
progressDisp         = d5

def ImportantButton = 1668452680

def BLUE  = 0
def GREEN = 2
def YELLOW = 5
def RED = 4

tTDisp.Color         = GREEN
pTDisp.Color         = GREEN
progressDisp.Color   = BLUE
progressDisp.Mode    = 0
progressDisp.Setting = 0

fix i = 0
loop:
    yield()
    targetCode = validatorControl.Setting
    ImportantButton.all.On = (targetCode > 0)

    if ImportantButton.all.On.min and ImportantButton.all.Setting.max and furnaceControl.Setting == -1:
        tT = (targetCode % 1000) * 10
        pT = trunc(targetCode / 1000) * 100

        ImportantButton.all.On = 0
        tTDisp.On = 1
        pTDisp.On = 1
        progressDisp.On = 1
        tTDisp.Setting  = tT
        pTDisp.Setting  = pT

        furnaceControl.Setting = targetCode
        yield()
        while furnaceControl.Setting != -1:
            progress = furnaceControl.Setting
            colorCode = progress % 10
            progress = trunc(progress / 10)
            progressDisp.Setting = progress
            color = (colorCode == 0) ? YELLOW : ((colorCode == 1) ? BLUE : RED)
            progressDisp.Color = color

            yield()
        progressDisp.On = 0
        progressDisp.Setting = 0
        i = 6
    else:
        if i == 0:
            tTDisp.On       = 0
            pTDisp.On       = 0
        else:
            i -= 1