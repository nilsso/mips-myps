ySrc = d0 # feedback
rSrc = d1 # target
cSrc = d2 # clear integral

# EDIT THESE:
def kP = 0.0100
def kI = 0.0000
def kD = 0.0015

fix r, y, i, rPrev, ePrev
def dt = 0.5

loop:
    yield()
    r = rSrc.Setting # r (target)
    y = ySrc.Setting # y (feedback)
    c = cSrc.Setting # c (clear integral)

    if c != 0:
        i = 0

    e = y - r # e = y-r
    i += e * dt # i += e*dt
    P = kP * e # P = kP*e
    I = kI * i # I = kI*i
    D = kD * (e - ePrev) / dt # D = kD*(e-ePrev)/dt
    u = P + I + D # u = P+I+D (the control variable)

    db.Setting = u
    rPrev = r # rPrev = r
    ePrev = e # ePrev = e
